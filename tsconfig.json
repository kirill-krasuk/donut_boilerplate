{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es5", 
            "es6", 
            "es7", 
            "ES2017", 
            "ES2018", 
            "ES2019", 
            "dom"
        ],
        "rootDir": "./",
        "allowJs": false,
        "checkJs": false,
        "strict": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "noEmit": true,
        "incremental": true,
        "downlevelIteration": true,
        "importHelpers": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowUnreachableCode": true,
        "pretty": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "types": ["node", "jest"],
        "paths": {
            "@core/*": ["./src/core/*"],
            "@app/*": ["./src/app/*"],
            "@utils/*": ["./src/core/utils/*"],
            "@ui-kit/*": ["./src/ui-kit/*"],
            "@images/*": ["./src/assets/images/*"],
            "@svgs/*": ["./src/assets/svgs/*"],
            "@server/*": ["./server/*"],
            "@public/*": ["./public/*"], 
            "@fonts/*": ["./src/assets/fonts/*"],
            "@test/*": ["./test/*"]
        },
    },
    "include": [
        "src/**/*", 
        "server/**/*", 
        "test/**/*", 
        "tools/**/*",
        "config/jest/setup.ts",
        "config/webpack/**/*"
    ],
  }
