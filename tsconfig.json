{
    "compilerOptions": {
        "plugins": [ { 
            "name": "typescript-plugin-css-modules" 
        } ],
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es5", 
            "es6", 
            "es7", 
            "ES2017", 
            "ES2018", 
            "ES2019", 
            "dom"
        ],
        "rootDir": "./",
        "baseUrl": "./",
        "allowJs": false,
        "checkJs": false,
        "strict": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "incremental": true,
        "downlevelIteration": true,
        "importHelpers": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowUnreachableCode": true,
        "pretty": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "types": [
            "node", 
            "jest", 
            "@testing-library/jest-dom"
        ],
        "paths": {
            "@core/*": ["./src/core/*"],
            "@app/*": ["./src/app/*"],
            "@utils/*": ["./src/utils/*"],
            "@ui-kit/*": ["./src/ui-kit/*"],
            "@images/*": ["./src/assets/images/*"],
            "@svgs/*": ["./src/assets/svgs/*"],
            "@server/*": ["./server/*"],
            "@public/*": ["./public/*"], 
            "@fonts/*": ["./src/assets/fonts/*"],
            "@test/*": ["./src/test/*"],
            "@env/*": ["./config/env"]
        },
    },
    "include": [
        "src/**/*", 
        "server/**/*", 
        "src/test/**/*", 
        "cli/**/*",
        "tools/**/*",
        "config/jest/setup.ts",
        "config/webpack/**/*",
        "config/env/*"
    ],
}
