{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
		"baseUrl": "./",
        "rootDir": "./",
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "paths": {
			"@core/*": ["src/core/*"],
			"@app/*": ["src/app/*"],
			"@ui-kit/*": ["src/ui-kit/*"],
			"@images/*": ["src/assets/images/*"],
            "@svgs/*": ["src/assets/svgs/*"],
			"@server/*": ["server/*"],
			"@public/*": ["public/*"], 
			"@fonts/*": ["src/assets/fonts/*"],
			"@test/*": ["src/test/*"],
        },
        "typeRoots": [ "./types", "./node_modules/@types"]
    },
    "exclude": ["node_modules", "**/node_modules/*"]
  }