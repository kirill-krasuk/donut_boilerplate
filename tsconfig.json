{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "lib": ["es5", "es6", "es7", "es2017", "dom"],
		"baseUrl": "./",
        "rootDir": "./",
        "allowJs": false,
        "checkJs": false,
        "strict": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowUnreachableCode": true,
        "pretty": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "paths": {
			"@core/*": ["src/core/*"],
			"@app/*": ["src/app/*"],
			"@ui-kit/*": ["src/ui-kit/*"],
			"@images/*": ["src/assets/images/*"],
            "@svgs/*": ["src/assets/svgs/*"],
			"@server/*": ["server/*"],
			"@public/*": ["public/*"], 
			"@fonts/*": ["src/assets/fonts/*"],
			"@test/*": ["test/*"],
        },
        "types": ["jest", "node"],
        "typeRoots": [ "./src", "./node_modules/@types"]
    },
    "include": ["src/**/*", "server/**/*"],
    "exclude": ["node_modules", "**/node_modules/*"]
  }