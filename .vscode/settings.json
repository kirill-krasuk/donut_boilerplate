{
	"javascript.validate.enable": false,
	"typescript.validate.enable": true,
	"git.confirmSync": false,
	"prettier.configPath": ".prettierrc",
	"editor.formatOnSave": false,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	// TODO: временный фикс дергания при сохранении vscode после обновление версии до 1.73
	// "files.refactoring.autoSave": false,
	"editor.codeActionsOnSave": [
		// "source.sortImports",
		"source.formatDocument",
		"source.fixAll.eslint"
	],
	"[css]": {
		"editor.codeActionsOnSave": ["source.formatDocument", "source.fixAll.stylelint"]
	},
	"[postcss]": {
		"editor.codeActionsOnSave": ["source.formatDocument", "source.fixAll.stylelint"]
	},
	"[scss]": {
		"editor.codeActionsOnSave": ["source.formatDocument", "source.fixAll.stylelint"]
	},
	"stylelint.enable": true,
	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,
	"stylelint.configFile": "config/css/styled.stylelint.json",
	"typescript.tsdk": ".yarn/sdks/typescript/lib",
	"search.exclude": {
		"**/.yarn": true,
		"**/.pnp.*": true
	},
	"eslint.nodePath": ".yarn/sdks",
	"cSpell.language": "en,ru",
	"prettier.prettierPath": ".yarn/sdks/prettier/index.js",
	"[yaml]": {
		"editor.defaultFormatter": "redhat.vscode-yaml",
		"editor.codeActionsOnSave": ["source.formatDocument"]
	},
	"[dockerfile]": {
		"editor.defaultFormatter": "ms-azuretools.vscode-docker"
	},
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"[dockercompose]": {
		"editor.defaultFormatter": "ms-azuretools.vscode-docker"
	},
	"[markdown]": {
		"editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
	},
	"jest.jestCommandLine": "yarn test:inline",
	"jest.rootPath": ".",
	"ansible.python.interpreterPath": "/Library/Frameworks/Python.framework/Versions/2.7/Resources/Python.app/Contents/MacOS/Python"
}
